<!DOCTYPE html>
<html ng-app="app" lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Torneios de Valoran</title>
    <!-- Bootstrap Core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/sb-admin.css" rel="stylesheet">
    <!-- Morris Charts CSS -->
    <link href="/css/plugins/morris.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    >
</head>
<body ng-controller="TeamManagementController">
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.Partial("ApplicationName");
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <!--Rafael Damasio: Left this space in case o need insert some element for exemplo a search bar-->
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            @Html.Partial("MenuLateral");
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Gerenciamento de times
                        </h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2">
                        <form name="FormAddTeam" ng-submit="Save()">
                            <div class="form-group">
                                <label>Nome</label>
                                <input class="form-control" placeholder="Nome do time" ng-model="Team.Name">
                            </div>
                            <br />
                            <div class="dropdown">
                                <label>Primeiro Competidor</label>
                                <select class="form-control" style="overflow: hidden" name="ContenderTeam" id="FirstContenderTeam" ng-model="Team.FirstContenderId" ng-init="LoadContenders()">
                                    <option value="">Selecione </option>
                                    <option ng-repeat="contender in ContendersList" value="{{contender.Id}}">{{contender.Name}} </option>
                                </select>
                            </div>
                            <br />
                            <div class="dropdown">
                                <label>Segundo Competidor</label>
                                <select class="form-control" style="overflow: hidden" name="ContenderTeam" id="SecondContenderTeam" ng-model="Team.SecondContenderId" ng-init="LoadContenders()">
                                    <option value="">Selecione </option>
                                    <option ng-repeat="contender in ContendersList" value="{{contender.Id}}">{{contender.Name}} </option>
                                </select>
                            </div>
                            <br />
                            <div class="dropdown">
                                <label>Terceiro Competidor</label>
                                <select class="form-control" style="overflow: hidden" name="ContenderTeam" id="ThirdContenderTeam" ng-model="Team.ThirdContenderId" ng-init="LoadContenders()">
                                    <option value="">Selecione </option>
                                    <option ng-repeat="contender in ContendersList" value="{{contender.Id}}">{{contender.Name}} </option>
                                </select>
                            </div>
                            <div class="col-lg-offset-4">
                                <button type="submit" class="btn btn-primary">Gravar</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <hr />
                        <h2>Times cadastrados</h2>
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th ng-click="OrderData('Name')"> Nome</th>
                                        <th ng-click="OrderData('RegisterDateTime')">Data cadastro</th>
                                    </tr>
                                </thead>
                                <tbody ng-init="LoadTeams()">

                                    <tr ng-repeat="Teams in TeamList | orderBy: Ordernation">
                                        <td>{{Teams.Name}}</td>
                                        <td>{{Teams.RegisterDateTime |date:'dd/MM/yyyy' }}</td>

                                        <td>
                                            <button type="submit" class="btn btn-danger" ng-click="DeleteTeam(Teams)">Excluir</button>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </div>
                <!-- /#page-wrapper -->
            </div>
            <!-- /#wrapper -->
            <!-- jQuery  and Angular -->
            <script src="/js/jquery.js"></script>
            <script src="/AngularControllers/js/angular.min.js"></script>
            <script src="/AngularControllers/js/angular-route.min.js"></script>
            <script src="~/AngularControllers/js/TeamManagementController.js"></script>
            <!-- Bootstrap Core JavaScript -->
            <script src="/js/bootstrap.min.js"></script>
            <!-- Morris Charts JavaScript -->
            <script src="/js/plugins/morris/raphael.min.js"></script>
            <script src="/js/plugins/morris/morris.min.js"></script>
            <script src="/js/plugins/morris/morris-data.js"></script>
        </div>
    </div>
</body>
</html>
